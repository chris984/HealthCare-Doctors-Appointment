@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/Template/css/sb-admin-2.min.css" rel="stylesheet" />
    <link href="~/Template/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>

    <title>Login</title>


    <style>

        .bg-login-image {
            background-image: url('../../Background/bgLogin.jpg') !important;
        }

        .error {
            color: red;
            float: right;
            width: 100%;
            font-size: 11pt;
            border-color:red;
        }


    </style>


</head>

<body class="bg-gradient-primary">

    <div>
        @RenderBody()
    </div>

    <script>

        //This is for the showing password
        let x = document.querySelector("#PasswordInput");

        function showPassword() {

            if (x.type == "password") {

                x.type = "text";
            }

            else {
                x.type = "password";
            }

        }



    </script>


    @*<script src="~/Template/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>*@
