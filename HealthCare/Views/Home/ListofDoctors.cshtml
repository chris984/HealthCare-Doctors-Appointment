<!--The Modal-->
<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold text text-dark">Set Appointment</h5>
                <button type="button" class="close" data-bs-dismiss="modal">×</button>
            </div>
            <form action="/Home/Testing" method="post">
                <div class="modal-body">

                    <div class="row mx-auto p-3">
                        <label>Date:</label>
                        <input class="form-control" type="date" autocomplete="off" name="date" value="" />
                    </div>
                    <div class="row mx-auto p-3">
                        <label>Time:</label>
                        <input class="form-control" type="time" autocomplete="off" name="time" value="" />
                    </div>

                </div>
                <div class="modal-footer">
                    <input id="btnClose" type="submit" class="btn btn-danger btn-block" value="Request">
                    <input type="button" value="Close" data-bs-dismiss="modal" class="btn btn-outline-info" />
                </div>
            </form>
        </div>
    </div>
</div>
<!--End of Modal-->




