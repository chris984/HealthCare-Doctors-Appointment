<script>


    var btnAddDoctor = function () {

        var myData = $("#frmDoctor").serialize();

        if (!$("#frmDoctor").valid()) {

            return false;
        }

        $.ajax({

            type: 'POST',
            url: '/Admin/Create_Doctor',
            data: myData,
            success: function (data) {

                if (data.success === true) {

                    alert(data.message);
                    window.location.href = "/Admin/List_of_Doctors";
                }

            }



        })

    }



</script>
